<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5E9E86B8"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frame4"
                android:layout_width="260dp"
                android:layout_height="232dp"
                android:layout_marginTop="30dp"

                app:layout_constraintEnd_toEndOf="@+id/frame3"
                app:layout_constraintStart_toStartOf="@+id/frame3"
                app:layout_constraintTop_toBottomOf="@+id/frame3">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gifImageView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/slimemuzo" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame3"
                android:layout_width="199dp"
                android:layout_height="232dp"
                android:layout_marginTop="30dp"

                app:layout_constraintEnd_toEndOf="@+id/frame2"
                app:layout_constraintStart_toStartOf="@+id/frame2"
                app:layout_constraintTop_toBottomOf="@+id/frame2">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gifImageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@drawable/vikimove_jump" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame1"
                android:layout_width="227dp"
                android:layout_height="179dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider4">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gifImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vikimove" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame2"
                android:layout_width="199dp"
                android:layout_height="232dp"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="@+id/frame1"
                app:layout_constraintStart_toStartOf="@+id/frame1"
                app:layout_constraintTop_toBottomOf="@+id/frame1">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gifImageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vikimove_arrows" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/retrogaming"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vikingTutorial"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/retrogaming"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/frame1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/frame1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leftRightTutorial"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/retrogaming"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/frame2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/frame2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jumpTutorial"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/retrogaming"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/frame3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/frame3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slimeTutorial"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/retrogaming"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/frame4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/frame4"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toTopOf="@+id/frame2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frame1" />

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toTopOf="@+id/frame3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frame2" />

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toTopOf="@+id/frame4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frame3" />

            <View
                android:id="@+id/divider4"
                android:layout_width="729dp"
                android:layout_height="5dp"
                android:layout_marginTop="20dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>

