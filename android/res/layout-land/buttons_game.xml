<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:onClick="normalMode"
        android:text="@string/normalMode"
        android:textStyle="bold"
        android:fontFamily="@font/retrogaming"
        android:textColor="@color/black"
        android:background="@drawable/layoutbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btMadness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="madnessMode"
        android:text="@string/madnessMode"
        android:fontFamily="@font/retrogaming"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/layoutbutton"
        app:layout_constraintEnd_toEndOf="@+id/btNormal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btNormal"
        app:layout_constraintTop_toBottomOf="@+id/btNormal" />

    <Button
        android:id="@+id/btLeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layoutbutton"
        android:fontFamily="@font/retrogaming"
        android:onClick="leaderScore"
        android:textStyle="bold"
        android:text="@string/leader"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/btMadness"
        app:layout_constraintStart_toStartOf="@+id/btMadness"
        app:layout_constraintTop_toBottomOf="@+id/btMadness" />


</android.support.constraint.ConstraintLayout>